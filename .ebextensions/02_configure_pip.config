commands:
  01_download_pip: 
    command: curl -O https://bootstrap.pypa.io/get-pip.py
  02_install_pip:
    command: python get-pip.py --user
  03_add_local_path:
    command: export PATH=~/.local/bin:$PATH
  04_source:
    command: source ~/.bash_profile
  05_verify_pip:
    command: pip --version